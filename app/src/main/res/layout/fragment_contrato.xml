<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contratos.ContratoFragment"
    android:orientation="vertical"
    android:background="@drawable/fondo1">

    <TextView
        android:id="@+id/tvDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#AFF8BD"
        android:text="Dirección"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Fecha de Inicio"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvFechaInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Aqui Fecha"
        android:textAlignment="center"
        android:textColor="#6eb5ff"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Fecha de Finalización"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvFechaFin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Aqui Fecha"
        android:textAlignment="center"
        android:textColor="#6eb5ff"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Precio Mensual"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Aqui Precio"
        android:textAlignment="center"
        android:textColor="#6eb5ff"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btPagos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:elevation="5dp"
        android:background="@drawable/btn_fondocolor"
        android:text="Ver Pagos"
        android:textSize="16sp"
        android:textColor="#fff"
        />
</LinearLayout>