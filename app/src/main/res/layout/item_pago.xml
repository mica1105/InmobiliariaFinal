<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvPagos"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/fondo2">

        <TextView
            android:id="@+id/tvP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="35dp"
            android:text="Nro de Pago:"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="24dp"
            android:text="Fecha:"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvP1" />

       <TextView
        android:id="@+id/tvP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="Importe:"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvP2" />

        <EditText
            android:id="@+id/etNroPago"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:enabled="false"
            app:layout_constraintStart_toEndOf="@+id/tvP1"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etFechaPago"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:enabled="false"
            app:layout_constraintStart_toEndOf="@+id/tvP2"
            app:layout_constraintTop_toBottomOf="@+id/etNroPago" />

        <EditText
            android:id="@+id/etImportePago"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:enabled="false"
            app:layout_constraintStart_toEndOf="@+id/tvP3"
            app:layout_constraintTop_toBottomOf="@+id/etFechaPago" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>